<%= render 'base' %>
<%= content_for :sitemap do %>
  <li class="active">查看贴子</li>
<% end %>
<%= render 'sidebar' %>
<div class="content">
  <div class="topics box">
    <div class="topic">   
      <div class="pull-right avatar_large">
        <%= user_avatar_tag(@topic.user, :large, :link => false) %>
      </div>
      <div class="infos">
        <h1><%= truncate(@topic.title, :length => 100) %></h1>
        <div class="info leader">
          由 <%= user_name_tag(@topic.user,:location => true) %>
          在 <a href="<%= node_topics_path(@topic.node_id) %>"><%= @topic.node.name %></a> 节点中发起
        </div>
        <div class="info time">
          <% if @topic.last_reply_user.blank? %>
            发布于 <%= timeago(@topic.created_at) %>
          <% else %>
            最后由 <%= user_name_tag(@topic.last_reply_user) %> 回复于 <%= timeago(@topic.replied_at) %>
          <% end %>
          , <%= @topic.hits %>次阅读
        </div>
      </div>			
    </div>
    <%= raw SiteConfig.before_topic_html %>
    <div class="body">
      <%= format_topic_body(@topic.body) %>
    </div>
    <%= raw SiteConfig.after_topic_html %>
    <div class="tools pull-right">
      <% if owner?(@topic) %>
        <a href="<%= edit_topic_path(@topic.id) %>" class="label success">修改</a><%= link_to "删除", topic_path(@topic.id), :method => :delete, :confirm => "确定要删除么？", :class => "label important" %>
      <% end %>
    </div>
    <%= share_tag(@topic.title) %>
  </div>

  <% if @replies.blank? %>
    <div class="no_result">
      暂无回复。
    </div>
  <% else %>
    <div id="replies" class="box">
      <div class="total">
        截止 <%= l @topic.replied_at, :format => :long %>, 共收到 <%= @topic.replies_count %> 条回复
      </div>
      <% @replies.each_with_index do |reply,i| %>
        <%= render "reply", :item => reply, :i => i %>
      <% end %>
    </div>
  <% end %>

  <% if current_user %>
    <div id="reply" class="form box">
      <%= form_for(Reply.new, :remote => true, :url => reply_topic_path(params[:id]), :html => {:class => 'form-stacked'}) do |f| %>
        <div class="clearfix">
          <div class="input">
            <div id="editor-button-bar"></div>
            <%= f.text_area :body, :id => 'editor-input' %>
            <div id="editor-preview"></div>
          </div>
        </div>
        <div class="clearfix">
          <button type="submit" id="btn_reply" class="btn primary">提交回复</button>
          <span class="help-inline">Ctrl+Enter</span>
        </div>
        <%= render "/shared/reply_help_block" %>
      <% end %>
      <script type="text/javascript">
        $("#new_reply").submit(function(){
          $('#btn_reply').button('loading');
        })
      </script>
    </div>
  <% else %>
    <div id="reply" class="form box">
      <div style="padding:20px;">
        需要 <a href='/account/sign_in' class="btn primary">登录</a> 后回复方可回复, 如果你还没有账号 <a href="/account/sign_up" class="btn danger"> 点击这里注册</a>。
      </div>
    </div>
  <% end %>
</div>
